
module mif_draw (
	input clk,    // Clock
	input rst_n,  // Asynchronous reset active low

	input logic [7:0] rgb_mif,

	output logic mif_draw_request
);

parameter bg_rgb = 0xFF;

always_ff @(posedge clk or negedge rst_n) begin : proc_mif_draw_request
	if(~rst_n) begin
		mif_draw_request <= 0;
	end else if(rgb_mif != bg_rgb)
		mif_draw_request <= 1;
	end
end

endmodule